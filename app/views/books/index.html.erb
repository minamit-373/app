<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book) %></td>
      <td><%= link_to "Edit", edit_book_path(book) %></td>
      <td><%= link_to "Destroy", book_path(book),method: :delete %></td>
      <td></td>
      </tr>
    <% end %>
  </tbody>
  </table>


<h2>New book</h2>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <div><% @book.errors.full_messages.each do |message| %></div>
    <%= message %>
  <% end %>
<% end %>

<%= form_with model:@book, local:true do |f| %>
<div><%= f.label :title, 'Title' %></div>
  <%= f.text_field :title %>
<div><%= f.label :body, 'Body' %></div>
  <%= f.text_area :body %>
  <div><%= f.submit 'Create Book' %></div>

  <% end %>